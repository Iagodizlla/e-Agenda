@{
    Layout = "_Layout";
    ViewBag.Titulo = "Visualização de Despesas";
}

<p>
    <a class="btn btn-primary px-4" href="/despesas/cadastrar">
        <i class="bi bi-plus"></i>
        Cadastrar Novo/a
    </a>
</p>

<hr />

<div class="d-flex flex-wrap gap-2">
    @foreach (var item in Model.Registros)
    {
        <div class="col-12 col-md-3">
            <div class="card border-0">
                <div class="card-body">
                    <h5 class="card-title">Despesa: @item.valor R$</h5>
                    <p class="card-text"><span class="fw-semibold">Descrição:</span> @item.descricao</p>
                    <p class="card-text"><span class="fw-semibold">Forma do Pagamento:</span> @item.formaDoPagamento</p>
                    <p class="card-text"><span class="fw-semibold">Data de Ocorrência:</span> @item.dataOcorrencia.ToString("dd/MM/yyyy")</p>
                    <p class="card-text">
                        <span class="fw-semibold">Categorias:</span>
                        @string.Join(", ", item.categoriasTitulo ?? new List<string>())

                    </p>


                    <span class="d-flex justify-content-end mt-4 gap-1">
                        <a href="/despesas/editar/@item.Id" class="btn btn-primary rounded-circle opcao-card">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a href="/despesas/excluir/@item.Id" class="btn btn-danger rounded-circle opcao-card">
                            <i class="bi bi-trash"></i>
                        </a>
                    </span>
                </div>
            </div>
        </div>
    }
</div>
